      </div>
    </nav>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      @RenderBody()
    </main>
  </div>
</div>
    <script src="~/lib/proper/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/feather.min.js"></script>
    @RenderSection("Scripts", false)

    <script>
        function getLoadingIndicator(m) {

            return '<div class="d-flex flex-row align-items-center p-2"><div class="spinner-border" role="status"></div><div class="p-2"><strong>' + m +' </strong></div></div>';
        }
        (function () {
