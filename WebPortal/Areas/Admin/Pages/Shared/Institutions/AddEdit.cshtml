@model WebPortal.Areas.Admin.Models.InstitutionViewModel


<div asp-validation-summary="ModelOnly" class="text-danger">
</div>
<input type="hidden" asp-for="@Model.Id" />
<input type="hidden" asp-for="@Model.Address.Id" />
    <div class="row">
        <div class="col">
            <label asp-for="@Model.Name" class="control-label"></label>
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="col">
            <label  class="control-label">Institution Type &nbsp;<span class="badge badge-danger">Required Field</span></label>
            <select asp-for="@Model.TypeId" class ="form-control" asp-items="ViewBag.Types"></select>
        </div>
    </div>
  
    <h6>Address Information</h6> 
    <div class="container">
        <div class="row">
            <div class="row py-2">
                <div class="col-md-12">
                    <label asp-for="@Model.Address.Address1" class="control-label"></label>
                    <input asp-for="@Model.Address.Address1" class="form-control" />
                    <span asp-validation-for="@Model.Address.Address1" class="text-danger"></span>
                </div> 
            </div>
            <div class="row py-2">
                <div class="col-md-6">
                    <label asp-for="@Model.Address.Address2" class="control-label"></label>
                    <input asp-for="@Model.Address.Address2" class="form-control" />
                    <span asp-validation-for="@Model.Address.Address2" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.Address.Address3" class="control-label"></label>
                    <input asp-for="@Model.Address.Address3" class="form-control" />
                    <span asp-validation-for="@Model.Address.Address3" class="text-danger"></span>
                </div>
            </div>
            <div class="row py-2">
                <div class="col-md-4">
                    <label asp-for="@Model.Address.Country" class="control-label"></label>
                    <select asp-for="@Model.Address.Country" class ="form-control" asp-items="ViewBag.Countries"></select>
                    <span asp-validation-for="@Model.Address.Country" class="text-danger"></span>
                </div>
            </div>

            @if(ViewBag.Statuses != null){

                <div class="row py-2">
                    <div class="col-md-4">
                        <label asp-for="@Model.SystemStatusId" class="control-label"></label>
                        <select asp-for="@Model.SystemStatusId" class ="form-control" asp-items="ViewBag.Statuses"></select>
                        <span asp-validation-for="@Model.Address.Country" class="text-danger"></span>
                    </div>
                </div>
            }
            
        </div> 
    </div>